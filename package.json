{
    "name": "tinycarecode",
    "displayName": "tinycarecode",
    "description": "A VS Code extension that displays self-care reminders from @tinycarebot.",
    "version": "0.0.1",
    "publisher": "thefifthisa",
    "engines": {
        "vscode": "^1.24.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./extension",
    "contributes": {
		"configuration": {
			"title": "tinycarecode",
			"properties": {
				"tcc.consumer_key": {
					"type": "string",
					"default": "",
					"description": "Your Consumer Key (API Key)."
				},
				"tcc.consumer_secret": {
					"type": "string",
					"default": "",
					"description": "Your Twitter Consumer Secret (API Secret)."
				},
				"tcc.access_token": {
					"type": "string",
					"default": "",
					"description": "Your Twitter Access Token."
				},
				"tcc.access_token_secret": {
					"type": "string",
					"default": "",
					"description": "Your Twitter Access Token Secret."
				},
				"tcc.refresh_after": {
					"type": "integer",
					"default": 60,
					"description": "Number of minutes until new reminder shows up."
				}
			}
		}
	},
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.11.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "twit": "^2.2.10"
	},
	"repository": {
        "type": "git",
        "url": "https://github.com/thefifthisa/tinycarecode.git"
    }
}
